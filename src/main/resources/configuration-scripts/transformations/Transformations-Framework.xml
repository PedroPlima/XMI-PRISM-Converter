<!-- ************************************************************************************* -->
<!-- Framework for the user to create a transformations file adapted to your modeling tool -->
<!-- ************************************************************************************* -->
<xmitransformations version="2.0">

	<!-- If you don't have an answer for your question, check the SDMetrics Manual inside the docs folder.
	 	 or on the website: http://www.sdmetrics.com/manual/MetaTrans.html -->

	<!-- GENERAL TIPS AND EXPLANATION -->
	<!-- "modelelement" is the name of the Metamodel element you are referring to -->
	<!-- "xmipattern" is where you put the tag of where the model element is inside the XMI file -->
	<!-- The trigger attributes: -->
	<!-- name: Name of the attribute in the Metamodel element -->
	<!-- type: Depends on where the information is. It can be attrval, ctext, cattrval, gattrval, constant, etc. Check manual 
		(7.2.2 section) for more information -->
	<!-- attr: The name of the attribute you want, inside the XMI tag -->

	<!-- id is generally "xmi.id" or "xmi:id". Change accordingly -->
	<!-- id and name of the element may be in different tags. Create 2 <xmitransformation> elements in this case -->
	<!-- src="" attribute depends on the type of the trigger. Used in cattrval and gattrval (child and grandchild) -->

	<!-- Base Element - You don't need to change anything here. -->
	<xmitransformation modelelement="sdmetricsbase" xmipattern="sdmetricsbase" recurse="true">
		<trigger name="id" type="attrval" attr="xmi.id" />
		<trigger name="name" type="attrval" attr="name" />
	</xmitransformation>

	<!-- Diagram -->
	<xmitransformation modelelement="diagram" xmipattern="TAG_OF_THE_DIAGRAM_INFORMATIONS" recurse="true">
		<trigger name="id" type="" attr="xmi.id" />
		<trigger name="name" type="" attr="name" />
		<trigger name="type" type="" attr="Activity Diagram" />
	</xmitransformation>

	<!-- Activity Control Nodes -->

	<!-- Executable Node/Opaque Action -->
	<xmitransformation modelelement="node" xmipattern="TAG_OF_THE_NODE_INFORMATIONS" recurse="true">
		<trigger name="type" type="constant" attr="executable" />
	</xmitransformation>

	<!-- Initial Node - Decision Node - Merge Node -->
	<xmitransformation modelelement="node" xmipattern="TAG_OF_THESE_KINDS_OF_NODES" recurse="true">
		<trigger name="type" type="" attr="ATTRIBUTE_OF_THE_TYPE" />
		<trigger name="incomingEdges" type="" attr="ATTRIBUTE_OF_INCOMING_EDGES" />
	</xmitransformation>

	<!-- Final Node -->
	<xmitransformation modelelement="node" xmipattern="TAG_OF_FINAL_NODE" recurse="true">
		<trigger name="type" type="constant" attr="activityfinal" />
	</xmitransformation>

	<!-- Activity Diagram Control Flow -->
	<xmitransformation modelelement="controlflow" xmipattern="TAG_OF_CONTROL_FLOW" recurse="true">
		<trigger name="source" type="" attr="" />
		<trigger name="target" type="" attr="" />
		<trigger name="probability" type="" attr="" />
	</xmitransformation>

	<!-- Sequence Diagram Lifeline/Component -->
	<xmitransformation modelelement="lifeline" xmipattern="TAG_OF_LIFELINE" recurse="true">
		<trigger name="BCompRel" type="" attr="" />
	</xmitransformation>

	<!-- Sequence Diagram Asynchronous Message -->
	<xmitransformation modelelement="asynchronousmessage" xmipattern="TAG_OF_ASYNC_MESSAGE" recurse="true">
		<trigger name="source" type="" src="" attr="" />
		<trigger name="target" type="" src="" attr="" />
	</xmitransformation>

</xmitransformations>

