<!-- Template for XMI Transformations for any UML modeling tool
	See the SDMetrics Manual (inside docs folder) for further details or go to the website:
	http://www.sdmetrics.com/manual/MetaTrans.html
	
	GENERAL TIPS
	"modelelement" is the name of the Metamodel element you are referring to
	"xmipattern" is where you put the tag name of where the model element information is inside the XMI file
	
	<trigger> tag attributes:
		name: Name of the attribute in the SDMetrics Metamodel.
		type: Depends on where the information is. It can be attrval, ctext, cattrval, gcattrval, constant, etc.
			  Check the SDMetrics manual section 7.2.2 for more information.
		attr: The name of the attribute you want, inside the XMI tag.
	
	The "id" of an element is generaly is generally on a "xmi.id" or "xmi:id" attribute. Change according to the XMI of your tool.
	The "id" and "name" of an element may be in different tags. Create 2 different <xmitransformation> elements in this case. 
	The "src" attribute depends on the type of the trigger. Used in cattrval and gcattrval (child and grandchild values). 
-->
<xmitransformations version="2.0">

	<!-- Base Element - Don't change anything here other than the "xmi.id" attribute (to xmi:id, for example). -->
	<xmitransformation modelelement="sdmetricsbase" xmipattern="sdmetricsbase" recurse="true">
		<trigger name="id" type="attrval" attr="xmi:id" />
		<trigger name="name" type="attrval" attr="name" />
	</xmitransformation>

	<!-- * Diagram * -->
	<!-- If different informations are in different tags, create an <xmitransformation> for each one. -->
	<xmitransformation modelelement="diagram" xmipattern="packagedElement" recurse="true">
		<trigger name="id" type="cattrval" src="packagedElement" attr="xmi:id" />
		<trigger name="name" type="cattrval" src="packagedElement" attr="name" />
		<trigger name="type" type="cattrval" src="packagedElement" attr="xmi:type" />
	</xmitransformation>
	
	<!-- * AD Elements * -->

	<!-- nodes -->
	<xmitransformation modelelement="node" xmipattern="node" recurse="true">
		<trigger name="type" type="attrval" attr="xmi:type" />
		<trigger name="incomingEdges" type="cattrval" src="incoming" attr="xmi:idref" />
	</xmitransformation>

	<!-- flows -->
	<xmitransformation modelelement="controlflow" xmipattern="edge" recurse="true">
		<trigger name="type" type="constant" attr="controlflow"/>
		<trigger name="source" type="attrval" attr="source" />
		<trigger name="target" type="attrval" attr="target" />
		<trigger name="probability" type="cattrval" src="ownedComment" attr="body" />
	</xmitransformation>
	
	<!-- * SD Elements * -->
	
	<!-- SD Lifeline/Component -->
	<xmitransformation modelelement="lifeline" xmipattern="packagedElement" recurse="true">
		<trigger name="type" type="constant" attr="lifeline"/>
		<trigger name="BCompRel" type="cattrval" src="ownedComment" attr="body" />
	</xmitransformation>

	<!-- SD Asynchronous Message -->
	<xmitransformation modelelement="message" xmipattern="message" recurse="true">
		<trigger name="source" type="attrval" attr="sendEvent" />
		<trigger name="target" type="attrval" attr="receiveEvent" />
	</xmitransformation>

</xmitransformations>
